{
  "name": "codelingual-server",
  "version": "0.1.0",
  "private": true,
  "description": "Server software for CodeLingual.",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongodb": "^3.6.6",
    "nodemon": "^2.0.7"
  },
  "scripts": {
    "server": "nodemon server.js",
    "format": "eslint --fix . && prettier --write ."
  },
  "devDependencies": {
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": ["eslint:recommended", "plugin:prettier/recommended"]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}
